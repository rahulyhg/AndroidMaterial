<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="edu.ptu.newfuture.RecycleviewListFragment">

    <ImageView
        android:id="@+id/recycleviewitem_iv_imgurl"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/recycleviewitem_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/recycleviewitem_iv_imgurl"
        android:minHeight="32dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/recycleviewitem_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_below="@id/recycleviewitem_tv_title"
        android:layout_alignLeft="@id/recycleviewitem_tv_title"
        android:gravity="center"
        android:minHeight="32dp"
        android:textSize="16dp" />
</RelativeLayout>
